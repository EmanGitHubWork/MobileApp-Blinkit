<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbProfileFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:titleTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Profile" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1.3dp"
        android:background="#DAD4D4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbProfileFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginTop="13dp"
            android:text="My Account" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_marginTop="6.5dp"
            android:text="9999999999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6B6C74"
            android:textSize="15sp"
            android:layout_marginTop="6.5dp"
            android:text="YOUR INFORMATION" />

        <LinearLayout
            android:id="@+id/llOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_marginTop="13dp">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:contentDescription="@string/your_orders_icon"
                android:src="@drawable/order_icon"
                android:layout_marginTop="6.5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6B6C74"
                android:textSize="23sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:text="Your Orders" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/next_page_icon"
                android:src="@drawable/next_page"
                android:layout_marginTop="15.5dp"
                android:layout_marginLeft="155.5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAddressBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_marginTop="13dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/address_book_icon"
                android:src="@drawable/new_address"
                android:layout_marginTop="6.5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6B6C74"
                android:textSize="23sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:text="Address Book" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/next_page_icon"
                android:src="@drawable/next_page"
                android:layout_marginTop="15.5dp"
                android:layout_marginLeft="130.5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_marginTop="13dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/logout_icon"
                android:src="@drawable/log_out"
                android:layout_marginTop="6.5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6B6C74"
                android:textSize="23sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:text="Log Out" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/next_page_icon"
                android:src="@drawable/next_page"
                android:layout_marginTop="15.5dp"
                android:layout_marginLeft="195dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
