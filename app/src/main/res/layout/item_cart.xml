<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Image of the item -->
    <ImageView
        android:id="@+id/ivItemImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/vegetable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Name of the item -->
    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/ivItemImage"
        app:layout_constraintEnd_toStartOf="@id/tvItemPrice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvItemQuantity"
        app:layout_constraintWidth_percent="0.5" />

    <!-- Quantity of the item -->
    <TextView
        android:id="@+id/tvItemQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quantity: 0"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/ivItemImage"
        app:layout_constraintEnd_toStartOf="@id/tvItemPrice"
        app:layout_constraintTop_toBottomOf="@id/tvItemName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <!-- Price of the item -->
    <TextView
        android:id="@+id/tvItemPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="end"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tvItemName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>
