<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130.00dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="9.10dp">

    <LinearLayout
        android:id="@+id/productimages"
        android:layout_width="130dp"
        android:layout_height="175dp"
        android:background="@drawable/bg_cat2"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="58.50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivproduct1"
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:layout_margin="6.50dp"
                android:visibility="visible"
                android:contentDescription="@string/profile_icon_description"
                android:src="@drawable/vegetable"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/ivproduct2"
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:layout_margin="6.50dp"
                android:visibility="visible"
                android:contentDescription="@string/profile_icon_description"
                android:src="@drawable/vegetable"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="58.50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivproduct3"
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:layout_margin="6.50dp"
                android:visibility="visible"
                android:contentDescription="@string/profile_icon_description"
                android:src="@drawable/vegetable"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/ivproduct4"
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:layout_margin="6.50dp"
                android:visibility="visible"
                android:contentDescription="@string/profile_icon_description"
                android:src="@drawable/vegetable"
                android:background="@color/white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/ivcategorytext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxLines="2"
            android:layout_marginTop="6.50dp"
            android:gravity="center"
            android:ellipsize="end"
            android:textSize="14.00sp"
            android:textColor="@color/black"
            android:text="Vegetables and Fruits"
            android:contentDescription="@string/vegetables_and_fruits_description"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
