<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2.60dp"
    android:id="@+id/main_id">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivcategoryimage"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:scaleType="centerInside"
            android:contentDescription="@string/profile_icon_description"
            android:src="@drawable/vegetable"
            android:background="@drawable/bg_cat2" />

        <TextView
            android:id="@+id/ivcategorytext"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginTop="6.50dp"
            android:gravity="center"
            android:ellipsize="end"
            android:textSize="14.00sp"
            android:textColor="@color/black"
            android:text="Vegetables and Fruits"
            android:contentDescription="@string/vegetables_and_fruits_description"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
