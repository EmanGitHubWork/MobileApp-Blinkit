<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2.60dp"
    android:id="@+id/main_id">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivcategoryimage"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:scaleType="centerInside"
            android:contentDescription="@string/profile_icon_description"
            android:src="@drawable/vegetable"
            android:background="@drawable/bg_cat2" />

        <TextView
            android:id="@+id/itemWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="48 g"
            android:textSize="14.00sp"
            android:textColor="#00008B"
            android:contentDescription="Item weight"/>

        <TextView
            android:id="@+id/ivcategorytext"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14.00sp"
            android:textColor="@color/black"
            android:text="Vegetables and Fruits"
            android:contentDescription="@string/vegetables_and_fruits_description"/>

        <!-- LinearLayout to hold price and add button in a single line -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Item price -->
            <TextView
                android:id="@+id/itemprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹5"
                android:textStyle="bold"
                android:textSize="14.00sp"
                android:textColor="@color/black"
                android:contentDescription="Item price"/>

            <!-- Add button with increased size -->
            <Button
                android:id="@+id/add_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_background"
                android:contentDescription="Add button"
                android:padding="8dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:visibility="visible"
            android:id="@+id/llproductcount"
            android:layout_width="60dp"
                android:background="@color/green"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvdecrementcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="19.50dp"
                />

            <TextView
                android:id="@+id/tvproductcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="19.50dp"
                />

            <TextView
                android:id="@+id/tvincrementcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="19.50dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
